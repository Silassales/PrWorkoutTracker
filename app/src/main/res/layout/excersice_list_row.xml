<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/row_padding_vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/row_padding_vertical">

    <TextView
        android:id="@+id/excercise_name_textview"
        android:layout_width="@dimen/excersice_list_name_width"
        android:layout_height="@dimen/excersice_list_height"
        android:layout_alignParentTop="true"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/excercise_weight_textview"
        android:layout_width="@dimen/excersice_list_weight_width"
        android:layout_height="@dimen/excersice_list_height"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/excercise_name_textview"
        android:layout_toRightOf="@+id/excercise_name_textview" />

    <Button
        android:id="@+id/excercise_add_weight_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="Button"
        android:layout_alignParentRight="true" />

</RelativeLayout>